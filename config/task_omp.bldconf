#!/bin/bash

source ${PARSECDIR}/config/task.bldconf

export task_target=omp

# Add options and links for omp
# some packages like streamcluster depend on tbb
# task_omp depends on mth for tpswitch
if [ ! "${pkgname}" == "tbb" -a ! "${pkgname}" == "mth" ]; then
  global_build_deps="mth"
  cflags="-I${PARSECDIR}/pkgs/libs/mth/inst/${PARSECPLAT}/include -DTO_OMP -fopenmp"
  CFLAGS="${CFLAGS} ${cflags}"
  CXXFLAGS="${CXXFLAGS} ${cflags}"
  LDFLAGS="${LDFLAGS}"
  LIBS="${LIBS}"
fi  

